<body style="background: linear-gradient(to bottom, #43b692 0%, #099773 100%);">
  <div id="root">
    <div class="container">
      <h1 class="text-center">Simple Expense Manager Project</h1>
      <br>
      <div class="root1 rowp-3">
        <form class="row g-2" action="/admin" method="post">
          <div class="col-md-6">
            <label for="inputCity" class="form-label">Type*</label>
            <select type="text" class="form-control" id="inputCity" name="type" placeholder="Please select your course">
              <option selected>---Choose one---</option>
              <option>CASH</option>
              <option>UPI  Â»</option>
            </select>
          </div>
          <div class="col-md-6">
            <label for="inputEmail4" class="form-label">Add Freind*</label>
            <input type="text" class="form-control" id="inputEmail4" name="addfriend"
              placeholder="Please enter your name" required="">
          </div>
          <div class="col-md-6">
            <label for="inputPassword4" class="form-label">Name*</label>
            <input type="text" class="form-control" id="inputPassword4" name="name"
              placeholder="Please enter your father name" required="">
          </div>
          <div class="col-md-6">
            <label for="inputZip" class="form-label">Date*</label>
            <input type="date" class="form-control" id="inputZip" name="date">
          </div>
          <div class="col-md-6">
            <label for="inputCity" class="form-label">Currency*</label>
            <select type="text" class="form-control" id="inputCity" name="currency"
              placeholder="Please select your Group">
              <option selected>---Choose one---</option>
              <option>USD</option>
              <option>RS</option>
            </select>
          </div>
          <div class="col-md-6">
            <label for="inputAddress2" class="form-label">Amount*</label>
            <input type="number" class="form-control" id="firstNumber" name="amount" placeholder="Please enter amount">
          </div>
          <div class="text-center">
            <br>
            <button class="btn btn-outline-light px-5" style="box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;">
              <span>Add New Expense</span>
            </button>
          </div>
        </form>
      </div>
    </div>


    <div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Type</th>
            <th scope="col">Add Freind</th>
            <th scope="col">Name</th>
            <th scope="col">Date</th>
            <th scope="col">Currency</th>
            <th scope="col">Amount</th>
            <th scope="col" style="padding-left: 60px;">Actions</th>
            <th></th>
            <br>
          </tr>
        </thead>
        {{#each data}}
        <tbody>
          <tr >
            <form action="" method="post">
              <td><input type="hidden" name="id" id="searchResults" value="{{this.id}}" style="" />
                <input type="text" name="type" value="{{this.type}}" />
              </td>
              <td><input type="text" name="addfriend" value="{{this.addfriend}}" /></td>
              <td><input type="text" name="name" value="{{this.name}}" /></td>
              <td><input type="date" name="date" value="{{this.date}}" /></td>
              <td><input type="text" name="currency" value="{{this.currency}}" /></td>
              <td><input type="number" name="amount" value="{{this.amount}}" /></td>
              <td>
                <button id="id1" type="submit" onclick="update()" style="border: none;"><i style="font-size:24px" class="fa">&#xf044;</i></button>
              </td>              
            </form>
            <form action="/admin/{{this.type}}" method="POST">
              <td>
                <button id="id" type="submit" onclick="myFunction()" style="border: none;"><i class="material-icons">&#xe872;</i></button>
              </td>
            </form>
          </tr>
        </tbody>
        {{/each}}
      </table>
    </div>
